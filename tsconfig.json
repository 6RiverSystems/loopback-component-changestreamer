{
	"compileOnSave": true,
	"include": [
		"src"
	],
	"exclude": [
		"node_modules",
		"scripts",
		"coverage",
		"dist"
	],
	"compilerOptions": {
		"outDir": "dist",
		"target": "es2018",
    "module": "commonjs",
		"moduleResolution": "node",
		"allowUnreachableCode": false,
		"strict": true,
		"sourceMap": true,
		"declaration": true,
		"forceConsistentCasingInFileNames": true,
		"removeComments": false,
		"preserveConstEnums": true,
		"experimentalDecorators": true,
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"incremental": true
	}
}
